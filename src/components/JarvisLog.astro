    flex-direction: column;
    gap: 0.9rem;
  }

  .jarvis-entry-divider {
    border: none;
    border-top: 1px solid var(--border);
    margin: 0.1rem 0;
  }

  .jarvis-entry-title {
    margin: 0;
    font-weight: 600;
    color: var(--text);
    font-size: 1.05rem;
  }

  .jarvis-date {
    margin-top: 0.3rem;
    color: var(--dim);
    font-size: 0.8rem;
    font-family: 'JetBrains Mono', 'Fira Code', 'Courier New', monospace;
  }

  .jarvis-body {
    color: var(--dim);
    line-height: 1.7;
    font-size: 0.95rem;
    margin-top: 0.75rem;
  }

  .jarvis-body :global(p) {
    margin: 0;
  }

  .jarvis-body :global(p + p) {
    margin-top: 0.9rem;
    padding-top: 0.9rem;
    border-top: 1px solid var(--border);
  }

  .jarvis-body :global(a) {
    color: var(--text);
    text-decoration-color: rgba(255, 255, 255, 0.25);
    text-underline-offset: 2px;
  }

  .jarvis-cursor-line {
    margin-top: 0.95rem;
    display: flex;
    align-items: center;
    gap: 0.35rem;
    font-family: 'JetBrains Mono', 'Fira Code', 'Courier New', monospace;
    color: var(--dim);
