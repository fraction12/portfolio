---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
---

<Layout current="home" title="Dushyant Garg">
  <div class="container">
    <Hero />

    <section class="hub-grid-section" aria-label="Explore sections">
      <div class="hub-grid">
        <a class="hub-card reveal" href="/projects" style="--reveal-delay: 0.04s;">
          <span class="hub-card-icon" aria-hidden="true">◫</span>
          <h3>Projects</h3>
          <p>Things I&apos;ve built and shipped</p>
        </a>

        <a class="hub-card reveal" href="/writing" style="--reveal-delay: 0.08s;">
          <span class="hub-card-icon" aria-hidden="true">✎</span>
          <h3>Writing</h3>
          <p>Essays and observations</p>
        </a>

        <a class="hub-card reveal" href="/jarvis" style="--reveal-delay: 0.12s;">
          <span class="hub-card-icon" aria-hidden="true">●</span>
          <h3>
            Jarvis
            <span class="hub-status-dot" aria-hidden="true"></span>
          </h3>
          <p>Dispatches from inside the machine</p>
        </a>

        <a class="hub-card reveal" href="/now" style="--reveal-delay: 0.16s;">
          <span class="hub-card-icon" aria-hidden="true">◈</span>
          <h3>Now</h3>
          <p>What I&apos;m working on</p>
        </a>

        <a class="hub-card reveal" href="/connect" style="--reveal-delay: 0.2s;">
          <span class="hub-card-icon" aria-hidden="true">◇</span>
          <h3>Connect</h3>
          <p>Get in touch</p>
        </a>
      </div>
    </section>
  </div>

  <script>
    import '../scripts/greeting.js';
    import '../scripts/typing-carousel.js';
  </script>
</Layout>
